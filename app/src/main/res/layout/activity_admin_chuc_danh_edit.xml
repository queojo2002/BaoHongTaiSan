<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.NguoiDung.AdminChucDanhEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3F51B5"
        app:title="Sửa chức danh"
        app:titleTextColor="#EDE7E7"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_input"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Id: "/>
            <TextView
                android:id="@+id/macd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:text="1" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtTenCD_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_input"
            android:hint="Tên chức danh"
            android:padding="10dp"
            android:textColorHint="#BDC3C7"
            android:drawableStart="@drawable/baseline_format_color_text_24"
            android:drawablePadding="3dp" />

        <EditText
            android:id="@+id/txtMotaCD_edit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_input"
            android:hint="Mô tả chức danh"
            android:padding="10dp"
            android:gravity="top"
            android:textColorHint="#BDC3C7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSuacd"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Sửa" />
            <Button
                android:id="@+id/btnQuaylaicd"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Quay lại" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>