<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    tools:context=".Activity.User.BaoHongActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:background="@color/lavender"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Báo hỏng: Phòng E3-302" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgBaoHong"
        android:layout_width="128dp"
        android:layout_height="100dp"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/logo_tdmu_2" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/imgBaoHong">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="left|center"
                android:text="Tên tài sản"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/txt_TenTS_BH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:gravity="left"
                android:text="Máy in Laser Trắng Đen HP 107w WiFi (4ZB78A)"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="left|center"
                android:text="Chọn trạng thái"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdSTT1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hư hỏng nhẹ (Minor)" />

                <RadioButton
                    android:id="@+id/rdSTT2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="Hư hỏng trung bình (Moderate)" />

                <RadioButton
                    android:id="@+id/rdSTT3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="Hư hỏng nghiêm trọng (Severe)" />

                <RadioButton
                    android:id="@+id/rdSTT4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="Hư hỏng hoàn toàn (Critical)" />
            </RadioGroup>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="left|center"
                android:text="Mô tả hư hỏng"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/txtMoTaHuHong_BH"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:gravity="top"
                android:hint="Mô tả hư hỏng tài sản"
                android:padding="10dp"
                android:textColorHint="#BDC3C7"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="left|center"
                android:text="Hình ảnh mô tả"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnChooseIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#706F6F"
                android:text="Chọn hình ảnh"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnGuiBaoHong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:backgroundTint="#2FAE35"
                android:text="Gửi báo hỏng" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2" />
        </TableRow>


     </TableLayout>
    </ScrollView>

</RelativeLayout>