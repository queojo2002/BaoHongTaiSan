<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_custom"
    android:layout_margin="16dp"
    android:padding="40dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Thông tin chi tiết"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/LL_PB_ChiTiet_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvTitle">
        <TextView
            android:id="@+id/tvTenP_ChiTiet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="-10dp"
            android:textSize="10sp"
            android:text="Thuộc phòng: "
            android:textColor="#A3A3A3"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/txtTenP_ChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-10dp"
            android:textSize="10sp"
            android:text="Phòng E3-202"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_PB_ChiTiet_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/LL_PB_ChiTiet_0">
        <TextView
            android:id="@+id/tvTenTS_ChiTiet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="-10dp"
            android:textSize="10sp"
            android:text="Tên tài sản: "
            android:textColor="#A3A3A3"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/txtTenTS_ChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-10dp"
            android:textSize="10sp"
            android:text="Bộ máy vi tính - LG"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_PB_ChiTiet_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/LL_PB_ChiTiet_1">
        <TextView
            android:id="@+id/tvTenNTS_ChiTiet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="-10dp"
            android:textSize="10sp"
            android:text="Tên nhóm tài sản: "
            android:textColor="#A3A3A3"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/txtTenNTS_ChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-10dp"
            android:textSize="10sp"
            android:text="Máy vi tính"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_PB_ChiTiet_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/LL_PB_ChiTiet_2">
        <TextView
            android:id="@+id/tvTenLTS_ChiTiet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="-10dp"
            android:textSize="10sp"
            android:text="Tên loại tài sản: "
            android:textColor="#A3A3A3"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/txtTenLTS_ChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-10dp"
            android:textSize="10sp"
            android:text="Công cụ dụng cụ"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_PB_ChiTiet_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/LL_PB_ChiTiet_3">
        <TextView
            android:id="@+id/tvSoLuong_ChiTiet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="-10dp"
            android:textSize="10sp"
            android:text="Số lượng: "
            android:textColor="#A3A3A3"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/txtSoLuong_ChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-10dp"
            android:textSize="10sp"
            android:text="3"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnHuyBo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL_PB_ChiTiet_4"
        android:layout_centerInParent="true"
        android:backgroundTint="#C5C5C5"
        android:text="Tắt"
        android:textSize="12sp" />
</RelativeLayout>