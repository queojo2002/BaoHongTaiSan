<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_custom"
    android:layout_margin="16dp"
    android:padding="40dp">

    <TextView
        android:id="@+id/tvTenChucNangEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Thông tin chi tiết"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvtents"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenChucNangEdit"
        android:padding="10dp"
        android:layout_marginStart="-10dp"
        android:textSize="10sp"
        android:text="Tên tài sản: "
        android:textColor="#A3A3A3"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/tvTenTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvtents"
        android:padding="10dp"
        android:layout_marginLeft="-10dp"
        android:textSize="10sp"
        android:text="Bộ máy vi tính - LG"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/tvTenChucNangEdit"/>

    <TextView
        android:id="@+id/tvtenphong"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvtents"
        android:padding="10dp"
        android:layout_marginStart="-10dp"
        android:textSize="10sp"
        android:text="Tên phòng: "
        android:textColor="#A3A3A3"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/tvTenphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvtenphong"
        android:layout_marginLeft="-10dp"
        android:padding="10dp"
        android:text="Phòng E3-104"
        android:layout_marginBottom="2dp"
        android:textSize="10sp"
        android:layout_below="@id/tvtents"/>

    <TextView
        android:id="@+id/tvtinhtrang"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvtenphong"
        android:layout_marginStart="-10dp"
        android:padding="10dp"
        android:textSize="10sp"
        android:text="Tình trạng: "
        android:textColor="#A3A3A3"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/tvTinhtrang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvtinhtrang"
        android:layout_marginLeft="-10dp"
        android:padding="10dp"
        android:text="Hư hỏng nghiêm trọng (Severe)"
        android:layout_marginBottom="2dp"
        android:textSize="10sp"
        android:layout_below="@id/tvTenphong"/>

    <TextView
        android:id="@+id/tvngaycapnhat"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvtinhtrang"
        android:layout_marginStart="-10dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:text="Ngày cập nhật: "
        android:textColor="#A3A3A3"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/tvNgaycapnhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvngaycapnhat"
        android:padding="10dp"
        android:layout_marginLeft="-10dp"
        android:text="2023-10-25 11:24:11"
        android:layout_marginBottom="2dp"
        android:textSize="10sp"
        android:layout_below="@id/tvTinhtrang"/>

    <TextView
        android:id="@+id/tvtennbc"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvngaycapnhat"
        android:layout_marginStart="-10dp"
        android:padding="10dp"
        android:textSize="10sp"
        android:text="Người báo cáo: "
        android:textColor="#A3A3A3"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/tvHoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvtennbc"
        android:padding="10dp"
        android:layout_marginLeft="-10dp"
        android:text="Hiếu Biện Phúc"
        android:layout_marginBottom="2dp"
        android:textSize="10sp"
        android:layout_below="@id/tvNgaycapnhat"/>

    <TextView
        android:id="@+id/tvemail"
        android:layout_width="90dp"
        android:layout_marginStart="-10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvtennbc"
        android:padding="10dp"
        android:textSize="10sp"
        android:text="Email: "
        android:textColor="#A3A3A3"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvemail"
        android:layout_marginLeft="-10dp"
        android:padding="10dp"
        android:text="*************@student.tdmu.edu.vn"
        android:layout_marginBottom="2dp"
        android:textSize="10sp"
        android:layout_below="@id/tvHoten"/>


    <Button
        android:id="@+id/btnHuyBo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvemail"
        android:layout_centerInParent="true"
        android:backgroundTint="#C5C5C5"
        android:text="Hủy"
        android:textSize="12sp" />



</RelativeLayout>
