<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_custom"
    android:layout_margin="16dp"
    android:padding="30dp">

    <TextView
        android:id="@+id/tvAdd_TenChucNangEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Thêm mới thông tin"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtHoVaTen_Add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvAdd_TenChucNangEdit"
        android:padding="12dp"
        android:textSize="14sp"
        android:background="@drawable/background_input"
        android:hint="Nhập họ và tên người dùng"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/txtSDT_Add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtHoVaTen_Add"
        android:padding="12dp"
        android:textSize="14sp"
        android:inputType="number"
        android:background="@drawable/background_input"
        android:hint="Nhập số điện thoại"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/txtEmail_Add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtSDT_Add"
        android:padding="12dp"
        android:textSize="14sp"
        android:background="@drawable/background_input"
        android:hint="Nhập email đăng nhập"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/txtMatKhau_Add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtEmail_Add"
        android:padding="12dp"
        android:textSize="14sp"
        android:background="@drawable/background_input"
        android:hint="Nhập mật khẩu đăng nhập"
        android:layout_marginBottom="2dp"/>


    <Spinner
        android:id="@+id/spnAdd_1"
        android:layout_below="@id/txtMatKhau_Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_input"
        android:padding="10dp"
        android:layout_marginBottom="2dp"/>

    <Spinner
        android:id="@+id/spnAdd_2"
        android:layout_below="@id/spnAdd_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_input"
        android:padding="10dp"
        android:layout_marginBottom="2dp"/>

    <Spinner
        android:id="@+id/spnAdd_3"
        android:layout_below="@id/spnAdd_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_input"
        android:padding="10dp"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/spnAdd_3">

        <Button
            android:id="@+id/btnAdd_HuyBo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="Hủy bỏ"
            android:backgroundTint="#AEAEAE"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:textSize="13sp"
            android:text="Thêm mới"/>
    </LinearLayout>


</RelativeLayout>