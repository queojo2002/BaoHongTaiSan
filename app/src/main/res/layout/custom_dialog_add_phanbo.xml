<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_custom"
    android:layout_margin="16dp"
    android:padding="30dp">

    <TextView
        android:id="@+id/tvTenChucNangEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Thêm mới tài sản vào phòng"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvShowInfoAdd"
        android:layout_below="@id/tvTenChucNangEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="asdad"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/txtSoLuongThemPhanBo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvShowInfoAdd"
        android:padding="12dp"
        android:textSize="14sp"
        android:background="@drawable/background_input"
        android:inputType="number"
        android:hint="Nhập số lượng cần thêm"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/txtGhiChuPhanBo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/txtSoLuongThemPhanBo"
        android:padding="12dp"
        android:textSize="14sp"
        android:background="@drawable/background_input"
        android:gravity="top"
        android:ems="10"
        android:hint="Ghi chú"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txtGhiChuPhanBo">

        <Button
            android:id="@+id/btnHuyBoPhanBo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="Hủy bỏ"
            android:backgroundTint="#AEAEAE"/>

        <Button
            android:id="@+id/btnAddPhanBo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:textSize="13sp"
            android:text="Thêm"/>
    </LinearLayout>


</RelativeLayout>